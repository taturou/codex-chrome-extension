{
  "manifest_version": 3,
  "name": "Codex Side Panel Chat",
  "version": "0.1.0",
  "description": "Codex app-server と連携するサイドパネルチャット",
  "permissions": ["sidePanel", "storage", "activeTab", "scripting", "tabs"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_title": "Open Codex Side Panel"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "options_page": "options.html"
}
