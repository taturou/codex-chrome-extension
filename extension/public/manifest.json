{
  "manifest_version": 3,
  "name": "Codex Side Panel",
  "version": "0.2.4",
  "description": "Side panel chat extension for Codex app-server",
  "permissions": [
    "sidePanel",
    "storage",
    "activeTab",
    "scripting",
    "tabs",
    "permissions"
  ],
  "optional_host_permissions": [
    "https://pjp.esol.co.jp/epw/*",
    "https://teams.cloud.microsoft/*"
  ],
  "host_permissions": [
    "ws://localhost/*",
    "ws://127.0.0.1/*",
    "wss://localhost/*",
    "wss://127.0.0.1/*",
    "http://localhost/*",
    "http://127.0.0.1/*",
    "https://localhost/*",
    "https://127.0.0.1/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_title": "Open Codex Side Panel"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "options_page": "options.html"
}
